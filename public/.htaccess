<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /buraq-forms/public/
    
    # منع الوصول لملفات البيانات والمجلدات الحساسة
    RewriteRule ^config/ - [F,L]
    RewriteRule ^src/ - [F,L]
    RewriteRule ^storage/ - [F,L]
    RewriteRule ^database/ - [F,L]
    
    # منع الوصول للملفات الحساسة
    RewriteRule ^\.env$ - [F,L]
    RewriteRule ^composer\.(json|lock)$ - [F,L]
    RewriteRule ^test_.*\.php$ - [F,L]
    
    # توجيه جميع الطلبات للملفات الموجودة
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L,QSA]
</IfModule>

# منع عرض قائمة المجلدات
<IfModule mod_dir.c>
    DirectoryIndex index.php
</IfModule>

# تأمين المجلدات الحساسة
<FilesMatch "\.(env|sql|json|log)$">
    Deny from all
</FilesMatch>

# حماية ملف .htaccess نفسه
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Cache control for assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>