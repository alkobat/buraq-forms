{
    "name": "employee-evaluation-system",
    "description": "نظام شامل لإدارة الاستمارات الديناميكية وتقييم الموظفين",
    "type": "project",
    "keywords": ["employee", "evaluation", "forms", "dynamic-forms", "php", "mysql"],
    "license": "MIT",
    "authors": [
        {
            "name": "Employee Evaluation System Team",
            "email": "admin@example.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "EmployeeEvaluationSystem\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "EmployeeEvaluationSystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse",
        "install-db": [
            "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS employee_evaluation_system;\"",
            "mysql -u root -p employee_evaluation_system < database/migrations/2024_01_01_000000_create_employee_evaluation_system_tables.sql"
        ],
        "setup": [
            "composer install",
            "@install-db",
            "chmod -R 755 storage/"
        ],
        "build-docs": [
            "mkdir -p docs/api",
            "phpdoc -d src -t docs/api"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/employee-evaluation-system/issues",
        "wiki": "https://github.com/employee-evaluation-system/wiki"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/employee-evaluation-system"
        }
    ]
}
